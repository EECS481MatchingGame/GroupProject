<Window
      x:Class="KinectColorApp.Restart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Restart"
      xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
      Height="718.178" Width="910.892" Loaded="Window_Loaded" Closing="Window_Closing" SizeChanged="Window_Size_Did_Change" 
      WindowStyle="None" WindowState="Maximized">

    <Canvas x:Name="RestartCanvas">
        <Canvas.Background>
            <ImageBrush x:Name="backgroundImage"/>
        </Canvas.Background>
        <Image x:Name="WinImg" Canvas.Left="51" HorizontalAlignment="Center" Height="700" Width="700" Source="Resources/congratulations.png" Canvas.Top="-65"/>
        <Button x:Name="restartButton" HorizontalAlignment="Center" Content="Restart" Canvas.Left="200" FontSize="24" Canvas.Top="487" Width="100" Height="40" Click="restartGame"/>
        <Button x:Name="menuButton" HorizontalAlignment="Center" Content="Menu" Canvas.Left="495" FontSize="24" Canvas.Top="487" Width="100" Height="40" Click="returnToMenu"/>
        <TextBlock Canvas.Left="351" Canvas.Top="404" FontSize="24"> Score: </TextBlock>
        <TextBlock x:Name="Score" Canvas.Left="423" Canvas.Top="404" FontSize="24"> 0 </TextBlock>
    </Canvas>
</Window>
