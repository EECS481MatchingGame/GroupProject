<Window
      x:Class="KinectColorApp.Restart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Restart"
      xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
      Height="718.178" Width="910.892" Loaded="Window_Loaded" Closing="Window_Closing" SizeChanged="Window_Size_Did_Change" 
      WindowStyle="None" WindowState="Maximized">

    <Canvas x:Name="RestartCanvas">
        <Canvas.Background>
            <ImageBrush x:Name="backgroundImage"/>
        </Canvas.Background>
        <Image x:Name="WinImg" Canvas.Left="105" Height="700" Width="700" Source="Resources/congratulations.png"/>
        <Button x:Name="restartButton" Content="Restart" Canvas.Left="254" Canvas.Top="552" Width="100" Height="40" Click="restartGame"/>
        <Button x:Name="menuButton" Content="Menu" Canvas.Left="549" Canvas.Top="552" Width="100" Height="40" Click="returnToMenu"/>
    </Canvas>
</Window>
